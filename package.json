{
  "name": "with-svelte",
  "private": true,
  "type": "module",
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev",
    "preview": "turbo run preview",
    "test": "turbo run test:unit && turbo run test:integration && npm run test:e2e",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run build && cd apps/web && npm run test:e2e && cd ../docs && npm run test:e2e && cd ../..",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "check": "prettier --check . && turbo run check",
    "kill:e2e": "turbo run kill:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/kit": "^2.17.2",
    "@types/node": "^22.13.5",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.0",
    "prettier-plugin-svelte": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-mockito": "^2.6.1",
    "turbo": "^2.4.4",
    "typescript": "^5.5.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
