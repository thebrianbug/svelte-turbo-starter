{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", ".vercel/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test:unit": {
      "inputs": ["src/**/*.{js,ts,svelte}", "tests/**/*.{js,ts}"]
    },
    "test:integration": {
      "inputs": ["src/**/*.integration.test.{js,ts}", "tests/**/*.integration.test.{js,ts}"],
      "env": ["DATABASE_URL", "NODE_ENV", "CI"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "outputs": ["*/**"]
    },
    "clean": {
      "cache": false
    },
    "kill:e2e": {
      "cache": false
    }
  }
}
