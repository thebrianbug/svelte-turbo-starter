{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "src/**/*.{js,ts,svelte}",
        "static/**/*",
        "svelte.config.js",
        "vite.config.ts",
        "postcss.config.cjs",
        "tailwind.config.js"
      ],
      "outputs": [".svelte-kit/**", ".vercel/**", "dist/**", "build/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.{js,ts,svelte}", "static/**/*", "svelte.config.js", "vite.config.ts"],
      "env": ["NODE_ENV", "PORT", "HOST"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "components/**/*.{js,ts,svelte}",
        ".eslintrc*",
        "eslint.config.js",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [".eslintcache", "eslint-results.json"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "components/**/*.{js,ts,svelte}",
        "components/**/*.test.{js,ts}",
        "vitest.config.ts",
        "vite.test.config.ts"
      ],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "CI", "VITEST_MAX_THREADS"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.integration.test.{js,ts}",
        "tests/**/*.integration.test.{js,ts}",
        "vitest.integration.config.ts"
      ],
      "outputs": ["coverage/**"],
      "env": ["DATABASE_URL", "NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["tests/**/*.test.ts", "playwright.config.ts"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": [
        "NODE_ENV",
        "CI",
        "BROWSER",
        "PLAYWRIGHT_HTML_REPORT",
        "PLAYWRIGHT_JUNIT_OUTPUT_NAME"
      ],
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "components/**/*.{js,ts,svelte}",
        "tsconfig.json",
        "svelte.config.js"
      ],
      "env": ["NODE_ENV"]
    },
    "format": {
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "components/**/*.{js,ts,svelte}",
        ".prettierrc",
        ".prettierignore"
      ],
      "outputs": ["*/**"],
      "env": ["NODE_ENV"]
    },
    "clean": {
      "cache": false
    },
    "kill:e2e": {
      "cache": false
    }
  }
}
