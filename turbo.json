{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.{js,ts,svelte}", "tests/**/*.{js,ts}"]
    },
    "test:unit": {
      "inputs": ["src/**/*.{js,ts,svelte}", "tests/**/*.{js,ts}"]
    },
    "test:integration": {
      "dependsOn": ["build", "^test:integration"],
      "inputs": ["src/**/*.{js,ts,svelte}", "tests/**/*.{js,ts}"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "outputs": ["*/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
