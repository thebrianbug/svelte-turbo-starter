{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", ".vercel/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "components/**/*.{js,ts,svelte}",
        ".eslintrc*",
        "eslint.config.js",
        "package.json",
        "tsconfig.json"
      ],
      "env": ["NODE_ENV"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,ts,svelte}",
        "tests/**/*.{js,ts}",
        "vitest.config.ts",
        "vite.test.config.ts"
      ],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "CI"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.integration.test.{js,ts}",
        "tests/**/*.integration.test.{js,ts}",
        "vitest.integration.config.ts"
      ],
      "outputs": ["coverage/**"],
      "env": ["DATABASE_URL", "NODE_ENV", "CI"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["tests/**/*.test.ts", "playwright.config.ts"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": ["NODE_ENV", "CI"],
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "format": {
      "outputs": ["*/**"]
    },
    "clean": {
      "cache": false
    },
    "kill:e2e": {
      "cache": false
    }
  }
}
