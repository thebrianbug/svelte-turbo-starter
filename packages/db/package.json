{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run --config ./vitest.unit.config.ts",
    "test:integration": "cross-env NODE_ENV=test DATABASE_URL=$DATABASE_URL PGUSER=$PGUSER PGPASSWORD=$PGPASSWORD vitest run --config ./vitest.integration.config.ts",
    "clean": "rimraf node_modules",
    "format": "prettier --write .",
    "check": "tsc --noEmit && prettier --check .",
    "lint": "eslint ."
  },
  "dependencies": {
    "@repo/typescript-config": "*",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "postgres": "^3.4.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.6"
  }
}
