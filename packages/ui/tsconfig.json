{
  "extends": "@repo/typescript-config/svelte.json",
  "include": ["./**/*.ts", "./**/*.svelte"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true
  }
}
