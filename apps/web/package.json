{
  "name": "web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "clean": "rimraf .svelte-kit build test-results node_modules",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && tsc --noEmit",
    "check:watch": "svelte-kit sync && concurrently \"svelte-check --tsconfig ./tsconfig.json --watch\" \"tsc --noEmit --watch\"",
    "lint": "eslint .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@repo/ui": "*"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@sveltejs/adapter-vercel": "^5.6.3",
    "@sveltejs/kit": "^2.17.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "svelte": "^5.20.1",
    "svelte-check": "^4.1.4",
    "concurrently": "^8.2.2"
  }
}
